rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default rule for coaches - anyone can read
    match /coaches/{coachId} {
      allow read: if true;
      allow write: if request.time < timestamp.date(2025, 11, 13);
    }

    // Bookings collection - users can only access their own bookings
    match /bookings/{bookingId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && 
                      (resource.data.userId == request.auth.uid || 
                       resource.data.coachId == request.auth.uid);
    }

    // Fallback rule for other collections
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 11, 13);
    }
  }
}